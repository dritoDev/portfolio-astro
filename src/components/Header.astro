---
import MobileMenu from "./MobileMenu.astro";
---

<header class="header">
  <a href="#home" class="logo">AR</a>

  <button
    class="nav-toggle"
    aria-label="Abrir menú"
    aria-expanded="false"
  >
    <span></span>
    <span></span>
    <span></span>
  </button>
</header>

<MobileMenu />



<style>
 
  /* Header (simple y estable) */
  .header {
  display: flex;
  align-items: center;
  justify-content: space-between;

  position: sticky;
  top: 0;
  z-index: 50;

  max-width: 1100px;
  margin: 0 auto;
  padding: 1.5rem 2rem;

  background: rgba(15, 23, 42, 0.9);
  backdrop-filter: blur(10px);
}

/* Botón hamburguesa */

.nav-toggle {
  display: none;
  flex-direction: column;
  gap: 6px;

  background: none;
  border: none;
  cursor: pointer;
  color: white;
}

.nav-toggle span {
  width: 24px;
  height: 2px;
  background: currentColor;
  transition: all 0.3s ease;
}

.nav-toggle.active span:nth-child(1) {
  transform: rotate(45deg) translateY(8px);
}

.nav-toggle.active span:nth-child(2) {
  opacity: 0;
}

.nav-toggle.active span:nth-child(3) {
  transform: rotate(-45deg) translateY(-8px);
}

/* Menú mobile (overlay real) */
.nav-toggle {
  display: none;
  flex-direction: column;
  gap: 6px;

  background: none;
  border: none;
  cursor: pointer;
  color: white;
}

.nav-toggle span {
  width: 24px;
  height: 2px;
  background: currentColor;
  transition: all 0.3s ease;
}

.nav-toggle.active span:nth-child(1) {
  transform: rotate(45deg) translateY(8px);
}

.nav-toggle.active span:nth-child(2) {
  opacity: 0;
}

.nav-toggle.active span:nth-child(3) {
  transform: rotate(-45deg) translateY(-8px);
}



/* MENÚ MOBILE */
.mobile-menu {
  position: fixed;
  top: 0;
  right: 0;

  width: 80%;
  max-width: 320px;
  height: 100vh;

  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(10px);
  z-index: 90;

  transform: translateX(100%);
  transition: transform 0.3s ease;
}

.mobile-menu.active {
  transform: translateX(0);
}


/* LINKS */
.mobile-menu .nav-links {
  list-style: none;
  padding: 4rem 2rem;

  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.mobile-menu a {
  font-size: 1.5rem;
  color: var(--text);
  text-decoration: none;
  transition: color 0.2s ease, transform 0.2s ease;
}

.mobile-menu a:hover {
  color: #38bdf8;
  transform: translateX(4px);
}

@media (max-width: 768px) {
  .nav-toggle {
    display: flex;
  }
}


.mobile-menu.active li {
  opacity: 0;
  animation: fadeInRight 0.3s ease forwards;
}

.mobile-menu.active li:nth-child(1) { animation-delay: 0.05s; }
.mobile-menu.active li:nth-child(2) { animation-delay: 0.1s; }
.mobile-menu.active li:nth-child(3) { animation-delay: 0.15s; }

@keyframes fadeInRight {
  from {
    opacity: 0;
    transform: translateX(8px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}


/* Animación hamburguesa → X */

.nav-toggle.active span:nth-child(1) {
  transform: rotate(45deg) translateY(8px);
}

.nav-toggle.active span:nth-child(2) {
  opacity: 0;
}

.nav-toggle.active span:nth-child(3) {
  transform: rotate(-45deg) translateY(-8px);
}

/* Resposive */
@media (max-width: 768px) {
  .nav-toggle {
    display: flex;
  }
}
.nav-toggle span {
  transform-origin: center;
}

.nav-toggle span:nth-child(2) {
  transform-origin: center;
}

.nav-toggle span:nth-child(1),
.nav-toggle span:nth-child(3) {
  transform-origin: left center;
}



</style>