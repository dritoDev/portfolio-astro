---
import MobileMenu from "./MobileMenu.astro";
import "../styles/global.css";
import Icon from "./Icon.astro";
---

<header class="header">
  <div class="icon">
    <Icon 
      size="30px" 
      name="icono"
    />
    <span>Personal</span>
  </div>

  <nav class="nav-links">
    <ul>
      <li><a href="#about">About</a></li>
      <li><a href="#skills">Skills</a></li>
      <li><a href="">Proyects</a></li>
      <li><a href="#contact">Contact</a></li>
    </ul>
  </nav>

  <button class="nav-toggle" aria-label="Abrir menú" aria-expanded="false">
    <span></span>
    <span></span>
    <span></span>
  </button>
  <div class="button-cta">
    <button type="button">
      Resumen
    </button>
  </div>
</header>
<MobileMenu />

<style>
  /* Header */
  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;

    position: sticky;
    top: 0;
    z-index: 50;

    padding: var(--space-4);
    background: rgba(15, 23, 42, 0.9);
    backdrop-filter: blur(10px);
  }
  .icon {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    span {
      font-weight: var(--font-semibold);
    }
  }
  .button-cta {
    display: none;
  }

  /* Ocultamos nav normal en mobile */
  .nav-links {
    display: none;
  }

  /* Hamburguesa visible en mobile */
  .nav-toggle {
    display: flex;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    color: white;
  }

  .nav-toggle span {
    width: 24px;
    height: 2px;
    background: currentColor;
    transition: all 0.3s ease;
    transform-origin: left center;
  }

  .nav-toggle span:nth-child(2) {
    transform-origin: center;
  }

  /* Animación hamburguesa → X */
  .nav-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translateY(8px);
  }

  .nav-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .nav-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translateY(-8px);
  }

  /* =========================
   MOBILE MENU (SIDEDRAWER)
========================= */

  .mobile-menu {
    position: fixed;
    top: 0;
    right: 0;

    width: 80%;
    max-width: 320px;
    height: 100vh;

    background: rgba(15, 23, 42, 0.95);
    backdrop-filter: blur(10px);
    z-index: 90;

    transform: translateX(100%);
    transition: transform 0.3s ease;
  }

  .mobile-menu.active {
    transform: translateX(0);
  }

  .mobile-menu .nav-links {
    list-style: none;
    padding: 4rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .mobile-menu a {
    font-size: 1.5rem;
    color: var(--text);
    text-decoration: none;
    transition:
      color 0.2s ease,
      transform 0.2s ease;
  }

  .mobile-menu a:hover {
    color: #38bdf8;
    transform: translateX(4px);
  }

  /* Animación items */
  .mobile-menu.active li {
    opacity: 0;
    animation: fadeInRight 0.3s ease forwards;
  }

  .mobile-menu.active li:nth-child(1) {
    animation-delay: 0.05s;
  }
  .mobile-menu.active li:nth-child(2) {
    animation-delay: 0.1s;
  }
  .mobile-menu.active li:nth-child(3) {
    animation-delay: 0.15s;
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(8px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* =========================
   DESKTOP (768px+)
========================= */

  @media (min-width: 768px) {
    .header {
      max-width: var(--container-ms);
      margin: 0 auto;
      padding: var(--space-6) var(--space-8);
    }

    /* Mostrar nav normal */
    .nav-links {
      display: flex;
      gap: var(--space-8);

    }
    ul {
      display: flex;
      list-style: none;
      flex-direction: row;
      gap: var(--space-4);
    }
    .button-cta {
      display: flex;
      justify-content: center; /* o flex-start si lo quieres alineado a la izquierda */
    }

    .button-cta button {
      padding: var(--space-2);
      font-size: 1rem;
      font-weight: var(--font-semibold);
      border-radius: var(--space-1);

      border: 1px solid transparent;
      cursor: pointer;

      background: linear-gradient(135deg, #38bdf8, #6366f1);
      color: white;

      transition:
        transform 0.2s ease,
        box-shadow 0.2s ease,
        background 0.3s ease;
    }

    /* Hover */
    .button-cta button:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 25px rgba(56, 189, 248, 0.3);
    }

    /* Active */
    .button-cta button:active {
      transform: translateY(0);
      box-shadow: 0 4px 10px rgba(56, 189, 248, 0.2);
    }

    /* Focus accesibilidad */
    .button-cta button:focus-visible {
      outline: 2px solid #38bdf8;
      outline-offset: 4px;
    }

    /* Ocultar hamburguesa */
    .nav-toggle {
      display: none;
    }

    /* Desactivar menu mobile */
    .mobile-menu {
      display: none;
    }
  }
</style>

